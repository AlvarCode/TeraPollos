<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TeraPollos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TeraPollos"
    xmlns:views="clr-namespace:TeraPollos.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TeraPollos">

    <Shell.FlyoutContent>
        <StackLayout Padding="30" Spacing="20">
            <Button Text="Ventas" FontAttributes="Bold" Background="Bisque" TextColor="Black"/>
            <Button Text="Menú" FontAttributes="Bold" Background="Bisque" TextColor="Black"/>
            <Button Text="Historial" FontAttributes="Bold" Background="Bisque" TextColor="Black"/>
            <Button Text="Cerrar sesión" FontAttributes="Bold" Background="Bisque" TextColor="Black"/>
        </StackLayout>
    </Shell.FlyoutContent>

    <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
</Shell>
